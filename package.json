{
    "name": "node-backend-boilerplate",
    "version": "0.0.1",
    "description": "Boilerplate for a NodeJS backend application using TypeScript.",
    "private": true,
    "main": "dist/main",
    "types": "dist/main",
    "scripts": {
        "start": "npm run build:watch",
        "build": "tsc --removeComments",
        "build:watch": "nodemon --delay 5 --ext ts --exec ./node_modules/.bin/ts-node -- ./src/main.ts",
        "lint": "tslint ./src/**/*.ts -t verbose",
        "test": "jasmine-ts --config=./jasmine.json",
        "test:watch": "nodemon --delay 5 --ext ts --exec ./node_modules/.bin/jasmine-ts -- --config=./jasmine.json",
        "cover": "nyc npm test & opener ./coverage/lcov-report/index.html"
    },
    "keywords": [
        "boilerplate"
    ],
    "author": "Felipe Ceotto <felipe.ceotto@gmail.com>",
    "license": "MIT",
    "devDependencies": {
        "@types/body-parser": "1.16.8",
        "@types/express": "4.11.1",
        "@types/jasmine": "2.8.6",
        "@types/jsonwebtoken": "7.2.5",
        "@types/mongodb": "3.0.0",
        "@types/mongoose": "4.7.32",
        "@types/node": "9.3.0",
        "@types/passport": "0.4.2",
        "@types/passport-jwt": "3.0.1",
        "@types/rx": "4.1.1",
        "@types/rx-node": "0.0.5",
        "jasmine": "3.0.0",
        "jasmine-pretty-html-reporter": "0.2.5",
        "jasmine-spec-reporter": "4.2.1",
        "jasmine-ts": "0.2.1",
        "mockgoose": "7.3.3",
        "mongodb-download": "2.2.3",
        "nodemon": "1.14.10",
        "nyc": "11.4.1",
        "opener": "1.4.3",
        "ts-node": "4.1.0",
        "tslint": "5.9.1",
        "typescript": "2.7.1"
    },
    "dependencies": {
        "body-parser": "1.18.2",
        "express": "4.16.2",
        "isemail": "3.1.1",
        "jsonwebtoken": "8.1.1",
        "mongoose": "4.13.9",
        "passport": "0.4.0",
        "passport-jwt": "3.0.1",
        "rx": "4.1.0",
        "rx-node": "1.0.2"
    },
    "nyc": {
        "exclude": [
            "src/**/*.spec.ts"
        ],
        "extension": [
            ".ts"
        ],
        "include": [
            "src/**/*.ts"
        ],
        "reporter": [
            "lcov",
            "text-summary"
        ],
        "watermarks": {
            "lines": [
                90,
                95
            ],
            "functions": [
                90,
                95
            ],
            "branches": [
                85,
                95
            ],
            "statements": [
                85,
                95
            ]
        }
    }
}
